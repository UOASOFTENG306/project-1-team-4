<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainLogoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">0.5</item>
        <item name="android:textSize">48sp</item>
        <item name="android:text">Hungry\nRadar</item>

    </style>

    <style name="SmallLogoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">0.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Hungry\nRadar</item>

    </style>

    <style name="HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CategoryCard">
        <item name="android:backgroundTint">#51AF5B</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailsActivityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:padding">0dp</item>
    </style>

</resources>